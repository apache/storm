<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Filters>
    </Filters>
    <Appenders>
        <!-- Console appender for normal log output -->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>%highlight{%-5level} %logger{1.} %style{%m}{bold,green}%n</pattern>
            </PatternLayout>
        </Console>
    </Appenders>
    <Loggers>
        <logger name="org.apache.storm.cassandra" level="trace" additivity="false">
            <appenderRef ref="console"/>
        </logger>
        <Root level="warn">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>