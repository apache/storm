            </includes>
        </fileSet>

        <!-- storm-sql -->
        <fileSet>
            <directory>${project.basedir}/../storm-sql-core-bin/target/sql-core/sql-core/lib-sql-core</directory>
            <outputDirectory>lib-tools/sql/core</outputDirectory>
